                        <input name="searchString" type="text" class="form-control" placeholder="Search for a game..." aria-label="Recipient's username" aria-describedby="button-addon2">
                        <button class="btn btn-outline-success my-2 my-lg-0" type="submit"><i class="bi bi-search"></i></button>
                    </form>*@

                    @*<form class="form-inline my-2 my-lg-2" asp-controller="Games" asp-action="Filter" style="padding-right: 25px;">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <button class="btn btn-outline-success my-2 my-lg-0" type="submit"><i class="bi bi-search"></i></button>
