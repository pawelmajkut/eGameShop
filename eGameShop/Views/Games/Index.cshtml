@using eGameShop.Data;
@using eGameShop.Models;
@using eGameShop.Controllers;
@using eGameShop.Migrations;

@model IEnumerable<Game>

@{
	ViewData["Title"] = "List of Games";
}

<div class="row">
	@foreach (var item in Model)
	{
		<div class="col-md-4 col-xs-6 border-primary mb-3">
			<div class="card mb-3" style="max-width: 540px;">
				<div class="row g-0">
					<div class="col-md-12">
						<div class="card-header text-white bg-info">
							<p class="card-text">
								<h5 class="card-title">
									@item.Name
									@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
									{
										<a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
									}
								</h5>
							</p>
						</div>
					</div>
					<div class="col-md-6">
						<img src="@item.ImageURL" width="100%" alt="@item.Name" class="mt-5">
					</div>
					<div class="col-md-6">
						<div class="card-body">
							<p class="card-text"><b>Name: </b>@item.Name</p>
							<p class="card-text"><b>Category: </b>@item.GameCategory</p>
							<p class="card-text"><b>Start Of Sale: </b>@item.StartOfSale.ToString("dd MMM yy")</p>
							<p class="card-text"><b>End Of Sale: </b>@item.EndOfSale.ToString("dd MMM yy")</p>
							<p class="card-text ">
								<b>Status: </b>
								@if (DateTime.Now >= item.StartOfSale && DateTime.Now <= item.EndOfSale)
								{
									<span class="badge bg-success text-white">AVAILABLE</span>
								}
								else if (DateTime.Now > item.EndOfSale)
								{
									<span class="badge bg-danger text-white">EXPIRED</span>
								}
								else
								{
									<span class="badge bg-primary text-white">UPCOMING</span>
								}
							</p>
						</div>
					</div>
					<div class="col-12">
						<p class="card-text p-3">@item.Description</p>
					</div>
					<div class="col-md-12">
						<div class="card-footer ">
							<p class="card-text">
								<a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id">
									<i class="bi bi-eye-fill"></i> Show Details
								</a>
								<a class="btn btn-success text-white @((DateTime.Now > item.EndOfSale) ? "disabled" : "")"
							   asp-controller="Orders"
							   asp-action="AddItemToShoppingCart"
							   asp-route-id="@item.Id">
									<i class="bi bi-cart-plus"></i> Add to Cart (Price @item.Price.ToString("c"))
								</a>
							</p>
						</div>
					</div>

				</div>
			</div>
		</div>
	}
</div>
@await Html.PartialAsync("_CreateItem", "Games")