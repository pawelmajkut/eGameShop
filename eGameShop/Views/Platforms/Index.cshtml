@using eGameShop.Data;
@using eGameShop.Models;
@using eGameShop.Controllers;
@using eGameShop.Migrations;

@model IEnumerable<Platform>

	@{
	ViewData["Title"] = "List of Platforms";
	}

	<div class="row">
	<div class="col-md-10 offset-md-1">
		@*offset-md-2*@
			<table class="table">
				<thead>
					<tr>
					<th>@Html.DisplayNameFor(model => model.Logo)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td class="align-middle">
							<img src="@item.Logo" alt="@item.Name" style="max-width: 150px; max-height: 150px;"/>
							

						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.Name)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.Description)
						</td>
						<td class="align-middle">
								<a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a> |
								<a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details </a> |
								<a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>
						</td>
						

					</tr>
				}
				</tbody>
				<tr>
					<td></td>
				</tr>
			</table>

		</div>
	</div>
<div style="position: fixed; right: 45px; bottom: 85px" class="tex-white">
	<a asp-controller="Platforms" asp-action="Create" class="btn btn-success"> <i class="bi bi-plus-circle"></i>Add New</a>
</div>
